<h1>Dad Jokes!</h1>

<h1><%= api_jokes['joke']%></h1>

<section class="session-manager">
    <a href="/sign_up">Sign up</a>
    <a href="/login">Login</a>
    <form action="/sessions" method="POST">
        <input type="hidden" name="_method" value="delete">
        <button>Log out</button>
    </form>
</section>

<section class="add-jokes">
    <h1>Add Jokes! </h1>
    <form action="/jokes" method="POST">
        <label for="">user: </label>
        <input type="text" name="user_id" id="">

        <label for="">Jokes: </label>
        <input type="text" name="jokes" id="">
    <button>HaHa!</button>
    </form>
</section>

<section class="all-joke">
<% all_jokes.each do |joke| %>
    <article class="dad-joke">
        <h4>User ID: <%= joke['user_id'] %> Posted a joke!: </h4>
        <h3><%= joke['jokes'] %></h3>
        <a href="/joke/<%= joke['jokes_id']%>/edit">Improvise this Joke</a>

        <form class="delete-joke" action="/joke/<%= joke['jokes_id'] %>" method="POST">
            <input type="hidden" name="_method" value="delete">

            <button>Delete</button>    
        </form>



    </article>

    
<% end %>

</section>

</form>